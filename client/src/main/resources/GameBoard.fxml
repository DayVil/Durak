<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane fx:id="GameBoard" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.uni_hannover.hci.cardgame.Controller.GameBoardController">
      <Button fx:id="Take" layoutX="30.0" layoutY="338.0" mnemonicParsing="false" text="Take" onAction="#actionTake"/>
      <Button fx:id="Pass" layoutX="464.0" layoutY="338.0" mnemonicParsing="false" onAction="#debugrequestgamestate" text="Pass DEBUG" />
   <Pane fx:id="DeckBackground" layoutX="480.0" layoutY="140.0" prefHeight="120.0" prefWidth="80.0" style="-fx-background-color: black;">
            <ImageView fx:id="leftoverDeck" fitHeight="70.0" fitWidth="40.0" layoutX="20.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="DrawPileCounter" alignment="CENTER" layoutX="15.0" layoutY="85.0" prefHeight="20.0" prefWidth="50.0" text="Number" textFill="RED">
                <font>
                    <Font size="11.0" />
                </font>
            </Label>
   </Pane>
   <Pane fx:id="GameActionsBackGround" prefHeight="80.0" prefWidth="600.0" style="-fx-background-color: black;">
               <Button fx:id="Menu" layoutX="500.0" layoutY="20.0" mnemonicParsing="false" onAction="#openMenu" styleClass=".green" text="Menu" />
   </Pane>
</Pane>
